<%= form_for(@lead, {url: leads_path, method: :post}) do |f| %>
  <div class="col-md-6">
    <%= f.email_field :email, class: 'form-control',
    required: 'required', placeholder: 'Seu melhor e-mail',
    autocomplete: 'off' %>
  </div>

  <div class="col-md-1">
    <%= f.submit 'Quero participar', 
    class: 'btn btn-primary btn-lg top' %>
  </div>
<% end %>