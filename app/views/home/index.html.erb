<%= provide :title, 'Semana Ruby Expert 1 | Renato Franco' %>
<%= provide :description, '' %>
<%= provide :keywords, '' %>
<%= provide :ld_json, {} %>

<%= render partial: 'shared/header' %>

<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <div class='row'>
              <div class='col-md-12'>
                <div class='row'>
                  <% @lessons.each do |lesson| %>
                    <%= link_to lesson_path(lesson), class: 'no-style' do %>
                      <div class="col-md-4 lesson">
                        <div class="panel panel-default">
                          <div class="panel-body">
                            <%= image_tag('', class: 'thumb pull-left') %>
                            <h5 class='bold'>
                              <span class='title'><%= lesson.name %>
                            </h4>
                            <p class='description'><%= truncate(lesson.description, length: 50) %></p>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="jumbotron" style="height: 400px;"></div>
            </div>

            <div class="row">
              <div class='col-md-12'>
                <div class='row'>
                  <div class='panel panel-default'>
                  <div class='panel-body'>
                    <div class="col-md-4 text-center">
                      <i class="fa-regular fa-gem" style='font-size: 60px;
                      margin-top: 10px;'></i>
                    </div>

                    <div class="col-md-8">
                      <h4 class='bold'>Baixe o template inicial da Semana Ruby Expert</h4>
                      <%= link_to '', class: 'btn btn-default btn-lg' do %>
                        <i class="fa-solid fa-cloud-arrow-down ico"></i>
                        Aperte aqui para baixar
                      <% end %>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class='col-md-12'>
                <div class='row'>
                  <div class='panel panel-default'>
                  <div class='panel-body'>
                    <div class="col-md-4 text-center">
                      <i class="fa-brands fa-discord" style='font-size: 60px;
                      margin-top: 10px;'></i>
                    </div>

                    <div class="col-md-8">
                      <h4 class='bold'>Participe! Deixe seu coment√°rio na Comunidade!</h4>
                      <%= link_to '', class: 'btn btn-default btn-lg' do %>
                        <i class="fa-brands fa-discord ico"></i>
                        Quero entrar na comunidade
                      <% end %>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render partial: 'shared/footer' %>